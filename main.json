{
    "builders": [
        {
            "accelerator": "kvm",
            "boot_command": [
                "<tab> console=ttyS0 text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-8-stream.ks<enter><wait>"
            ],
            "boot_wait": "10s",
            "disk_interface": "virtio",
            "disk_size": 7000,
            "format": "qcow2",
            "http_directory": "http",
            "iso_checksum": "e38192400212796085b7996f21828aa8f8a72d44b64059572eb8c725e13be4cc",
            "iso_checksum_type": "sha256",
            "iso_url": "http://mirror.cs.vt.edu/pub/CentOS/8-stream/isos/x86_64/CentOS-Stream-x86_64-boot.iso",
            "net_device": "virtio-net",
            "output_directory": "build",
            "shutdown_command": "systemctl poweroff",
            "ssh_password": "passwd",
            "ssh_timeout": "10m",
            "ssh_username": "root",
            "type": "qemu",
            "vm_name": "centos-8-stream-amd64-{{ timestamp }}.qcow2",
            "headless": true,
            "qemuargs": [
                ["-monitor", "unix:qemu-monitor.sock,server,nowait"],
                ["-serial", "pipe:/tmp/qemu-serial"],
                ["-m", "2048M"]
            ]
        }
    ]
}

